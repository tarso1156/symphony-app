{% extends("base.html.twig") %}

{% block body %}
    <h1>List of all posts</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th style="width: 20px"></th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td><a href="{{ path("post.show", { id: post.id }) }}"><i class="fas fa-edit"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}